version: '3.8'

services:
  frontend:
    build:
      context: ./frontend # Adjust the path to your frontend directory
      dockerfile: Dockerfile
    ports:
      - "3000:80" # Map port 3000 on host to port 80 in the container
    environment:
      VITE_API_URL: http://98.80.178.32:8000 # Backend service URL
    depends_on:
      - backend # Ensure the backend service starts first
    networks:
      - app_network

  backend:
    build:
      context: ./backend
    container_name: backend
    ports:
      - "8000:8000" # Adjust port mapping as needed
    environment:
      POSTGRES_URL: postgresql://app:kapil123@postgres:5432/app
    networks:
      - app_network

  db:
    image: postgres:13-alpine
    container_name: postgres
    environment:
      POSTGRES_USER: app
      POSTGRES_PASSWORD: kapil123
      POSTGRES_DB: app
    networks:
      - app_network
    ports:
      - "5432:5432"
    volumes:
      - db_data:/var/lib/postgresql/data

volumes:
  db_data:

networks:
  app_network:

